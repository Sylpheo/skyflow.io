{% extends "layout.html.twig" %}

{% block title %}All Emails{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
        <a href="createEmail"><button type="button" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span> Create Email</button></a>
<div class="tab-content">
    <div class="tab-pane fade in active" >
    {% if emails %}
        
        <div class="table-responsive">
            <table class="table table-hover table-condensed viewTable" id="emails">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Subject</th>
                        <th>Customer Key</th>
                        <th></th>
                    </tr>
                </thead>
                    {% for email in emails %}
                        <tr>
                        	<td>{{ email.ID}}</td>
                        	<td>{{email.Name}}</td>
        					<td>{{email.Subject}}</td>
        					<td>{{email.CustomerKey}}</td>
                            <td><button type="button" class="btn btn-danger btn-xs" title="Delete" data-toggle="modal" data-target="#emailDialog{{ email.ID }}"><span class="glyphicon glyphicon-trash"></span></button>

                                <div class="modal fade" id="emailDialog{{ email.ID }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                                <h4 class="modal-title" id="myModalLabel">Confirmation needed</h4>
                                            </div>
                                            <div class="modal-body">
                                                Do you really want to delete this email ?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                <a href="/email/{{email.ID}}/delete" class="btn btn-danger">Confirm</a>
                                            </div>
                                        </div><!-- /.modal-content -->
                                    </div><!-- /.modal-dialog -->
                                </div><!-- /.modal -->
                                                </td>
        				</tr>
    				{% endfor %}
			</table> 
        </div>
      
			{% else %}
			<div class="alert alert-warning">No emails found ! </div>
	{% endif %}
</div>
</div>

{% endblock %}
