{% extends "layout.html.twig" %}

{% block title %}New Event{% endblock %}

{% block content %}
<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Create Event
				</h1>
				<ol class="breadcrumb">
					<li><a href="/">Home</a></li>
					<li><a href="events">Events</a></li>
					<li class="active">Create</li>
				</ol>
			</div>
		</div>


				{{form_start(eventForm,  { 'attr': {'class': 'form-horizontal'} })}}
					{{form_row(eventForm.name, {'label' : 'Name'}) }}
					{{form_row(eventForm.description, {'label' : 'Description'}) }}


				 <input type="submit" name="submit" value="Save" />
			   {{form_end(eventForm)}}

</div>
{% endblock %}
