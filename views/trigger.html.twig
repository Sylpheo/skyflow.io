{% extends "layout.html.twig" %}

{% block title %}TriggeredSend{% endblock %}

{% block content %}
	<div class="tab-content">
   		<div class="tab-pane fade in active" >
   				<div class="table-responsive">
		       		<table class="table table-hover table-condensed viewTable" id="trigger" class="display table" width="100%">
		            	<thead>
				            <tr>
				            	<th>Name</th>
				                <th>Customer Key</th>
				                <th>Description</th>
				                <th>Status</th>
				                <th>Email ID</th>
				            </tr>
				        </thead>
									<tr>
										<td>{{trigger.Name}}</td>
										<td>{{trigger.CustomerKey}}</td>
										<td>{{trigger.Description}}</td>
										<td>{{trigger.TriggeredSendStatus}}</td>
										<td><a href="/email/{{trigger.Email.ID}}">{{trigger.Email.ID}}</a></td>
									</tr>
					</table>
				</div>
		</div>
	</div>
{% endblock %}
