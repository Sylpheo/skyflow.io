{% extends "layout.html.twig" %}

{% block title %}Add Salesforce credentials{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add Salesforce Credentials
                </h1>
                <ol class="breadcrumb">
                    <li><a href="/">Home</a></li>
                    <li class="active">Add Salesforce Credentials</li>
                </ol>
            </div>
        </div>
        {% for flashMessage in app.session.flashbag.get('success') %}
            <div class="alert alert-success">
                {{ flashMessage }}
            </div>
        {% endfor %}

        <form action="#" method="post">
            {{form_start(credentialsForm)}}
            {{form_row(credentialsForm.client_id, {'label' : 'Client ID'}) }}
            {{form_row(credentialsForm.client_secret, {'label' : 'Client Secret'}) }}
            {{form_row(credentialsForm.is_sandbox, {'label' : 'Sandbox'}) }}

            <input type="submit" name="submit" value="Add credentials !" />
            {{form_end(credentialsForm)}}
        </form>
    </div>
{% endblock %}
