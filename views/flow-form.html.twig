{% extends "layout.html.twig" %}

{% block title %}New Flow{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>

    <form action="#" method="post">
        {{form_start(flowForm)}}
        {{form_row(flowForm.name, {'label' : 'Name'}) }}
        {{form_row(flowForm.class, {'label' : 'Class'}) }}
        {{ form_row(flowForm.documentation, {'label' : 'Documentation'}) }}


        <input type="submit" name="submit" value="Add !" />
        {{form_end(flowForm)}}
    </form>
{% endblock %}
