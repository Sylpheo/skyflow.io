{% extends "layout.html.twig" %}

{% block title %}New Flow{% endblock %}

{% block content %}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Create Flow
            </h1>
            <ol class="breadcrumb">
                <li><a href="/">Home</a></li>
                <li><a href="flows">Flows</a></li>
                <li class="active">Create</li>
            </ol>
        </div>
    </div>

    <form action="#" method="post">
        {{form_start(flowForm)}}
        {{form_row(flowForm.name, {'label' : 'Name'}) }}
        {{form_row(flowForm.class, {'label' : 'Class'}) }}
        {{ form_row(flowForm.documentation, {'label' : 'Documentation'}) }}


        <input type="submit" name="submit" value="Save" />
        {{form_end(flowForm)}}
    </form>
</div>
{% endblock %}
