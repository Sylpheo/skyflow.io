<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ app.request.basepath }}/vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="{{ app.request.basepath }}/css/skyflow.css" rel="stylesheet">

    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.8.0/styles/default.min.css">

    <title>Skyflow.io - {% block title %}{% endblock %}</title>
</head>
<body>
<div class="container">
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/"><img src="{{ app.request.basepath }}/images/logo.jpg" alt="skyflow"></a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse-target">
                <ul class="nav navbar-nav navbar-right">
                    {% if app.security.token and is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span>
                                Welcome, {{ app.security.token.user.username }}<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('events') }}">Events</a></li>
                                <li><a href="{{ path('flows') }}">Flows</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('mapping') }}">Mapping</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('gestionToken') }}">Manage Token</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('ET_credentials') }}">ExactTarget Setup</a></li>
                                <li><a href="{{ path('et-helper') }}">ExactTarget API Helper</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('wave-credentials') }}">Wave Setup</a></li>
                                <li><a href="{{ path('wave-helper') }}">Wave API Helper</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ path('logout') }}">Log out</a></li>
                            </ul>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div><!-- /.container -->
    </nav>
    {% autoescape %}
    <div id="content">{% block content %}{% endblock %}</div>
    {% endautoescape %}
    <footer class="footer">
        Skyflow.io
    </footer>
</div>

<!-- jQuery -->
<script src="{{ app.request.basepath }}/vendor/jquery/dist/jquery.min.js"></script>
<!-- JavaScript Boostrap plugin -->
<script src="{{ app.request.basepath }}/vendor/bootstrap/dist/js/bootstrap.min.js"></script>
<!-- Ckeditor -->
<script src="{{ app.request.basepath }}/vendor/ckeditor/ckeditor.js"></script>
<script src="{{ app.request.basepath }}/vendor/ckeditor/adapters/jquery.js"></script>

<script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.8.0/highlight.min.js"></script>

<script>
// apply highlight.js
$(document).ready(function() {
  $('pre code').each(function(i, block) {
    hljs.highlightBlock(block);
  });
});
</script>

{% block javascripts %}{% endblock %}

</body>
</html>