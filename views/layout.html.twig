<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ app.request.basepath }}/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    
    <link href="{{ app.request.basepath }}/css/microcms.css" rel="stylesheet">

    <title>Skyflow - {% block title %}{% endblock %}</title>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse-target">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Skyflow</a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse-target">
                    <ul class="nav navbar-nav navbar-right">
                        {% if app.security.token and is_granted('IS_AUTHENTICATED_FULLY') %}
                            <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-th-list"></span>
                                 Welcome, {{ app.security.token.user.username }}<b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('emails') }}">Emails</a></li>
                                    <li><a href="{{ path('subscribers') }}">Subscribers</a></li>
                                    <li><a href="{{ path('lists') }}">Lists</a></li>
                                    <li><a href="{{ path('triggers') }}">Triggers</a></li>
                                    <li><a href="{{ path('listsSub') }}">Lists Subscribers</a></li>
                                    <li><a href="{{ path('events') }}">Events</a></li>
                                    <li><a href="{{ path('logout') }}">Log out</a></li>
                                </ul>
                            </li> 
                             {% else %}

                            <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <span class="glyphicon glyphicon-user"></span> Not connected <b class="caret"></b></a>
                                <ul class="dropdown-menu">
                                    <li><a href="{{ path('login') }}">Log in</a></li>
                                    <li><a href="{{ path('account') }}">Create account</a></li>
                                </ul>
                            </li>
                        {% endif %}       
                    </ul>
                </div>
            </div><!-- /.container -->
        </nav>
        {% autoescape %}
        <div id="content">{% block content %}{% endblock %}</div>
        {% endautoescape %}
        <footer class="footer">
            Skyflow 
        </footer>
    </div>

    <!-- jQuery -->
    <script src="{{ app.request.basepath }}/lib/jquery/jquery.js"></script>  
    <!-- JavaScript Boostrap plugin -->
    <script src="{{ app.request.basepath }}/lib/bootstrap/js/bootstrap.min.js"></script>
    <!-- Ckeditor -->
     <script src="{{ app.request.basepath }}/lib/ckeditor/ckeditor.js"></script>
      <script src="{{ app.request.basepath }}/lib/ckeditor/adapters/jquery.js"></script>


    {% block javascripts %}{% endblock %}

</body>
</html>