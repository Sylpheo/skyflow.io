{% extends "layout.html.twig" %}

{% block title %}Add Wave credentials{% endblock %}

{% block content %}
<h2 class="text-center">{{ block('title') }}</h2>
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}

<form action="#" method="post">
	{{form_start(waveForm)}}
		{{form_row(waveForm.waveid, {'label' : 'Wave Client ID'}) }}
		{{form_row(waveForm.wavesecret, {'label' : 'Wave Client Secret'}) }}
		{{form_row(waveForm.wavelogin, {'label' : 'Login Salesforce'}) }}
		{{form_row(waveForm.wavepassword, {'label' : 'Password Salesforce + Security Token'}) }}

	
	 <input type="submit" name="submit" value="Add credentials !" />
   {{form_end(waveForm)}}
</form>
{% endblock %}
