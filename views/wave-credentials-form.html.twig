{% extends "layout.html.twig" %}

{% block title %}Add Wave credentials{% endblock %}

{% block content %}
<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<h1 class="page-header">Add Wave Credentials
			</h1>
			<ol class="breadcrumb">
				<li><a href="/">Home</a></li>
				<li class="active">Add Wave Credentials</li>
			</ol>
		</div>
	</div>
		{% for flashMessage in app.session.flashbag.get('success') %}
		<div class="alert alert-success">
			{{ flashMessage }}
		</div>
		{% endfor %}

		<form action="#" method="post">
			{{form_start(waveForm)}}
				{{form_row(waveForm.client_id, {'label' : 'Wave Client ID'}) }}
				{{form_row(waveForm.client_secret, {'label' : 'Wave Client Secret'}) }}
				{{form_row(waveForm.sandbox, {'label' : 'Sandbox'}) }}

			 <input type="submit" name="submit" value="Add credentials !" />
		   {{form_end(waveForm)}}
		</form>
</div>
{% endblock %}
